<Window x:Class="Timelines.GUI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timelines.GUI"
        mc:Ignorable="d"
        KeyDown="MainWindow_KeyDown"
        Title="Timelines" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbl_Welcome" HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0,45,0,0" FontWeight="Bold" FontSize="20">Welcome to Timelines!</Label>
        <Label x:Name="lbl_NewProjectCommandText" HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0,90,0,0" FontSize="14">Press 'n' to create a new project</Label>
        <Label x:Name="lbl_OpenProjectCommandText" HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0,120,0,0" FontSize="14">Press 'o' to open a project</Label>
        <Label x:Name="lbl_QuitAppCommandText" HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0,150,0,0" FontSize="14">Press 'q' to quit app</Label>
    </Grid>
</Window>
